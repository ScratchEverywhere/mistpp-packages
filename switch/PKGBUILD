# Maintainer: Grady Link <homebrew@grady.link>

pkgname=switch-libmistpp
pkgver=0.3.4
pkgrel=1
pkgdesc="A port of TurboWarp/mist to C++ using libcurl ."
arch=(any)
url="https://github.com/ScratchEverywhere/mistpp"
license=("LGPL3")
makedepends=('switch-cmake' 'dkp-toolchain-vars')
depends=('switch-curl')
source=("libmistpp-${pkgver}.tar.gz::https://github.com/ScratchEverywhere/mistpp/archive/refs/tags/v${pkgver}.tar.gz")
groups=('wiiu-portlibs')

build() {
  cd "$srcdir/mistpp-${pkgver}"

  mkdir build
  cd build

  source /opt/devkitpro/wiiuvars.sh

  powerpc-eabi-cmake .. \
    -DCMAKE_BUILD_TYPE="Release" \
    -DCMAKE_INSTALL_PREFIX=$PORTLIBS_PREFIX \
    -DCMAKE_C_COMPILER_WORKS=true \
    -DCMAKE_CXX_COMPILER_WORKS=true \
    -DBUILD_TEST=OFF

  make
}

package() {
  cd "$srcdir/mistpp-${pkgver}/build"
  make install DESTDIR=$pkgdir
}

sha256sums=('a3e3a62ef216b4c3c0367f01c1e2169c0a36c818f6990cea8fb8e7f5050d28ce')
