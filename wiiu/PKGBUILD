# Maintainer: Grady Link <homebrew@grady.link>

pkgname=wiiu-libmistpp
pkgver=0.1.4
pkgrel=1
pkgdesc="A port of TurboWarp/mist to C++ using libcurl ."
arch=(any)
url="https://github.grady.link/mistpp"
license=("GPL3")
makedepends=('wiiu-cmake' 'dkp-toolchain-vars')
depends=('wiiu-curl')
source=("libmistpp-${pkgver}.tar.gz::https://github.com/gradylink/mistpp/archive/refs/tags/v${pkgver}.tar.gz")
groups=('wiiu-portlibs')

build() {
  cd "$srcdir/mistpp-${pkgver}"

  mkdir build
  cd build

  source /opt/devkitpro/wiiuvars.sh

  powerpc-eabi-cmake .. \
    -DCMAKE_BUILD_TYPE="Release" \
    -DCMAKE_INSTALL_PREFIX=$PORTLIBS_PREFIX \
    -DCMAKE_C_COMPILER_WORKS=true \
    -DCMAKE_CXX_COMPILER_WORKS=true \
    -DBUILD_TEST=OFF

  make
}

package() {
  cd "$srcdir/mistpp-${pkgver}/build"
  make install DESTDIR=$pkgdir
}

sha256sums=('1b6c8e965150926cb0a1d181a8967058955a45828186139ad913d4858e4a4b43')
